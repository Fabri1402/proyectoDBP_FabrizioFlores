@{
}
<html>
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&family=Poller+One&display=swap">
</head>
<body>
    <!--<h4>@Model.Count()</h4> -->
    <div class="card-deck">
        @foreach (var item in Model)
        {
            <div class="card m-4" style="min-width:18rem;max-width:30.5%;">
                <div class="card-header">
                    <h3>@item.DesPro</h3>
                    <h3>S/.@item.PrePro.ToString("#.") </h3>
                   <!-- <h3>@item.StkAct</h3> -->
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Comprar" asp-route-id="@item.CodPro" class="btn btn-primary m-2">Añadir</a>
                </div>
            </div>
        }
    </div>
</body>
</html>
