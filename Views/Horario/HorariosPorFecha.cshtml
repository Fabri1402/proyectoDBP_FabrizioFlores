@model IEnumerable<proyecto_DBP.Models.Horario>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&family=Poller+One&display=swap">
</head>
<body>
    <div class="card-deck">
        @foreach (var item in Model)
        {
            <div class="card m-4" style="min-width:18rem;max-width:30.5%;">
                <div class="card-header">
                    <h3>@item.IdHorario</h3>
                    <h3>Hora: @item.Hora.ToString(@"hh\:mm")</h3>
                    <h3>Tamaño de mesa: @item.Tamaño</h3>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="IngresarDatos" asp-route-id="@item.IdHorario" class="btn btn-primary m-2">Seleccionar</a>
                </div>
            </div>
        }
    </div>
</body>
</html>